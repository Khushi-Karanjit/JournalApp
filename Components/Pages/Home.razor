@page "/"
@using JournalApp.Services

<h1>Home</h1>

<div class="card p-3">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h5 class="mb-0">Analytics</h5>
    </div>

    <div class="row g-3 align-items-center mb-3">
        <div class="col-md-3">
            <input type="date"
                   class="form-control"
                   @bind-value="_startDate"
                   @bind-value:format="yyyy-MM-dd" />
        </div>
        <div class="col-md-3">
            <input type="date"
                   class="form-control"
                   @bind-value="_endDate"
                   @bind-value:format="yyyy-MM-dd" />
        </div>
        <div class="col-md-2 d-grid">
            <button class="btn btn-primary" @onclick="ApplyFilter">
                Apply
            </button>
        </div>
    </div>

    @if (_analyticsSummary is null)
    {
        <div class="text-muted">Loading...</div>
    }
    else
    {
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card p-3 h-100">
                    <h6 class="mb-2">Mood distribution (category)</h6>
                    @if (_analyticsSummary.MoodCategoryPercentages.Count == 0)
                    {
                        <div class="text-muted">No data.</div>
                    }
                    else
                    {
                        @foreach (var c in _analyticsSummary.MoodCategoryPercentages)
                        {
                            <div class="mb-2">
                                <div class="d-flex justify-content-between small">
                                    <span>@c.Category</span>
                                    <span>@c.Percentage%</span>
                                </div>
                                <div class="chart-bar">
                                    <div class="chart-bar-fill" style="width:@($"{c.Percentage}%")"></div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-3 h-100">
                    <h6 class="mb-2">Most frequent mood</h6>
                    <div class="fs-4 fw-semibold">@_analyticsSummary.MostFrequentMood</div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-3 h-100">
                    <h6 class="mb-2">Top tags</h6>
                    @if (_analyticsSummary.TagCounts.Count == 0)
                    {
                        <div class="text-muted">No data.</div>
                    }
                    else
                    {
                        <ul class="mb-0">
                            @foreach (var t in _analyticsSummary.TagCounts.Take(5))
                            {
                                <li>@t.Name: @t.Count</li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="row g-3 mt-1">
            <div class="col-md-6">
                <div class="card p-3 h-100">
                    <h6 class="mb-2">Tag breakdown (%)</h6>
                    @if (_analyticsSummary.TagBreakdownPercentages.Count == 0)
                    {
                        <div class="text-muted">No data.</div>
                    }
                    else
                    {
                        @foreach (var t in _analyticsSummary.TagBreakdownPercentages.Take(8))
                        {
                            <div class="mb-2">
                                <div class="d-flex justify-content-between small">
                                    <span>@t.Category</span>
                                    <span>@t.Percentage%</span>
                                </div>
                                <div class="chart-bar">
                                    <div class="chart-bar-fill" style="width:@($"{t.Percentage}%")"></div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-3 h-100">
                    <h6 class="mb-2">Word count trend (avg)</h6>
                    @if (_analyticsSummary.WordCountTrend.Count == 0)
                    {
                        <div class="text-muted">No data.</div>
                    }
                    else
                    {
                        <ul class="mb-0">
                            @foreach (var p in _analyticsSummary.WordCountTrend)
                            {
                                <li>@p.Date.ToString("yyyy-MM-dd"): @p.AverageWords</li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="row g-3 mt-1">
            <div class="col-md-6">
                <div class="card p-3 h-100">
                    <h6 class="mb-2">Streaks (range)</h6>
                    <div>Current: @_analyticsSummary.CurrentStreakDays</div>
                    <div>Longest: @_analyticsSummary.LongestStreakDays</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-3 h-100">
                    <h6 class="mb-2">Missed days (range)</h6>
                    @if (_analyticsSummary.MissedDates.Count == 0)
                    {
                        <div class="text-muted">None.</div>
                    }
                    else
                    {
                        <div>@_analyticsSummary.MissedDates.Count total</div>
                        <div class="text-muted" style="font-size:0.85rem;">
                            @string.Join(", ", _analyticsSummary.MissedDates.Take(5).Select(d => d.ToString("MM-dd")))
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private readonly AnalyticsService _analyticsService = new();
    private AnalyticsService.AnalyticsSummary? _analyticsSummary;
    private DateTime _startDate = DateTime.Today.AddDays(-30);
    private DateTime _endDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        _analyticsSummary = await _analyticsService.GetSummaryAsync(_startDate, _endDate);
    }

    private async Task ApplyFilter()
    {
        _analyticsSummary = await _analyticsService.GetSummaryAsync(_startDate, _endDate);
    }
}
