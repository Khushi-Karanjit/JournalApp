@page "/today"
@using JournalApp.Models
@inject JournalApp.Services.AppDataContext DataContext
@inject JournalApp.Services.MoodCatalog MoodCatalog
@inject JournalApp.Services.TagCatalog TagCatalog
@inject JournalApp.Services.DiaryEntryService EntryService
@inject IJSRuntime JS
<h3>Today’s Journal</h3>
<p class="text-muted mb-3">
    One entry per day — @DateOnly.FromDateTime(DateTime.Now).ToString("dddd, MMM dd")
</p>

@if (!string.IsNullOrWhiteSpace(_status))
{
    <div class="alert alert-info">@_status</div>
}

<div class="row g-3">
    <!-- Editor -->
    <div class="col-lg-8">
        <div class="card p-3">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input class="form-control"
                       placeholder="Give your entry a title..."
                       @bind="_draft.Title" />
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                @* <textarea class="form-control"
                          rows="10"
                          placeholder="Write here..."
                          @bind="_draft.Content"></textarea> *@
                          <div id ="journal">

                          </div>
                <div class="form-text">
                    Words: @_draft.WordCount
                </div>
            </div>

            @if (_todayEntry is not null)
            {
                <hr />
                <div class="text-muted" style="font-size:0.9rem;">
                    <div><strong>Created:</strong> @_todayEntry.CreatedOn.ToString("g")</div>
                    <div><strong>Last updated:</strong> @_todayEntry.LastUpdatedOn.ToString("g")</div>
                </div>
            }
        </div>
    </div>

    <!-- Mood + Tags -->
    <div class="col-lg-4">
        <div class="card p-3 mb-3">
            <h5 class="mb-3">Mood</h5>

            <div class="mb-3">
                <label class="form-label">Primary mood (required)</label>
                <select class="form-select" @bind="_mainMood">
                    @foreach (var group in _moodGroups)
                    {
                        <optgroup label="@group.Category">
                            @foreach (var m in group.Moods)
                            {
                                <option value="@m">@m</option>
                            }
                        </optgroup>
                    }
                </select>
            </div>

            <div>
                <label class="form-label">Secondary moods (optional, up to 2)</label>
                @foreach (var group in _moodGroups)
                {
                    <div class="mb-2">
                        <div class="text-muted small mb-1">@group.Category</div>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var m in group.Moods)
                            {
                                var selected = _extraMoods.Contains(m);
                                var disable = !selected && _extraMoods.Count >= 2;

                                <button type="button"
                                        class="btn btn-sm @(selected ? "btn-dark" : "btn-outline-dark")"
                                        disabled="@disable"
                                        @onclick="() => ToggleExtraMood(m)">
                                    @m
                                </button>
                            }
                        </div>
                    </div>
                }

                <div class="form-text">
                    Selected: @_extraMoods.Count / 2
                </div>
            </div>
        </div>

        <div class="card p-3">
            <h5 class="mb-3">Tags</h5>

            @if (_availableTags.Count == 0)
            {
                <div class="text-muted">No tags available.</div>
            }
            else
            {
                <div class="d-flex flex-wrap gap-2 mb-3">
                    @foreach (var t in _availableTags)
                    {
                        var selected = _selectedTagIds.Contains(t.TagId);

                        <button type="button"
                                class="btn btn-sm @(selected ? "btn-dark" : "btn-outline-dark")"
                                @onclick="() => ToggleTag(t.TagId)">
                            @t.Name
                        </button>
                    }
                </div>
            }

            <div class="input-group">
                <input class="form-control"
                       placeholder="Add custom tag..."
                       @bind="_newTagText" />
                <button class="btn btn-outline-primary"
                        type="button"
                        @onclick="AddCustomTag">
                    Add
                </button>
            </div>

            @if (_selectedTags.Count > 0)
            {
                <div class="mt-3">
                    <div class="text-muted" style="font-size:0.9rem;">Selected:</div>
                    <div class="d-flex flex-wrap gap-2 mt-1">
                        @foreach (var t in _selectedTags)
                        {
                            <span class="badge bg-secondary">@t.Name</span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- FINAL ACTIONS AT END -->
<div class="mt-4 mb-5 d-flex justify-content-end gap-2">
    <button class="btn btn-sm btn-outline-secondary"
            disabled="@(!_hasTodayEntry)"
            @onclick="DeleteToday">
        Delete
    </button>

    <button class="btn btn-sm btn-primary"
            @onclick="Save">
        Save
    </button>
</div>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            JS.InvokeVoidAsync("initQuill", "journal");
        }
    }

    private DiaryEntry _draft = new();
    private DiaryEntry? _todayEntry;
    private bool _hasTodayEntry;
    private string _status = "";

    private List<MoodCatalog.MoodGroup> _moodGroups = new();
    private Mood _mainMood = Mood.Calm;

    private List<Tag> _availableTags = new();

    private readonly List<Mood> _extraMoods = new();
    private readonly HashSet<Guid> _selectedTagIds = new();
    private readonly List<Tag> _selectedTags = new();

    private string _newTagText = "";

    protected override void OnInitialized()
    {
        var uid = DataContext.ActiveUser.UserId;

        _moodGroups = MoodCatalog.GetMoodsByCategory();
        _availableTags = TagCatalog.GetUserTags(uid);

        LoadToday();
    }

    private void LoadToday()
    {
        var uid = DataContext.ActiveUser.UserId;

        var today = DateOnly.FromDateTime(DateTime.Now);
        _todayEntry = EntryService.GetEntryForDay(uid, today);

        _hasTodayEntry = _todayEntry is not null;

        _extraMoods.Clear();
        _selectedTagIds.Clear();
        _selectedTags.Clear();

        if (_todayEntry is null)
        {
            _draft = new DiaryEntry();
            _mainMood = GetDefaultPrimaryMood();

            _status = "No entry yet for today. Write something and save.";
            return;
        }

        // Copy into draft
        _draft = new DiaryEntry
        {
            Title = _todayEntry.Title,
            Content = _todayEntry.Content
        };

        // Model uses ONE list: Moods
        // First mood is treated as the main mood
        if (_todayEntry.Moods is not null && _todayEntry.Moods.Count > 0)
        {
            _mainMood = _todayEntry.Moods[0];

            foreach (var m in _todayEntry.Moods.Skip(1))
            {
                if (_extraMoods.Count < 2 && !_extraMoods.Contains(m))
                    _extraMoods.Add(m);
            }
        }
        else
        {
            _mainMood = GetDefaultPrimaryMood();
        }

        foreach (var t in _todayEntry.Tags)
            _selectedTagIds.Add(t.TagId);

        RefreshSelectedTags();
        _status = "Loaded today’s entry.";
    }

    private void ToggleExtraMood(Mood mood)
    {
        if (_extraMoods.Contains(mood))
        {
            _extraMoods.Remove(mood);
            return;
        }

        if (_extraMoods.Count >= 2) return;
        _extraMoods.Add(mood);
    }

    private void ToggleTag(Guid tagId)
    {
        if (_selectedTagIds.Contains(tagId))
            _selectedTagIds.Remove(tagId);
        else
            _selectedTagIds.Add(tagId);

        RefreshSelectedTags();
    }

    private void RefreshSelectedTags()
    {
        _selectedTags.Clear();
        _selectedTags.AddRange(_availableTags.Where(t => _selectedTagIds.Contains(t.TagId)));
    }

    private void AddCustomTag()
    {
        var uid = DataContext.ActiveUser.UserId;
        var name = (_newTagText ?? "").Trim();

        if (string.IsNullOrWhiteSpace(name))
        {
            _status = "Tag name cannot be empty.";
            return;
        }

        if (!DataContext.Tags.Any(t => t.UserId == uid &&
                                       t.Name.Equals(name, StringComparison.OrdinalIgnoreCase)))
        {
            DataContext.Tags.Add(new Tag
            {
                UserId = uid,
                Name = name,
                IsPredefined = false
            });
        }

        _availableTags = TagCatalog.GetUserTags(uid);

        var added = _availableTags
            .FirstOrDefault(t => t.Name.Equals(name, StringComparison.OrdinalIgnoreCase));

        if (added is not null)
            _selectedTagIds.Add(added.TagId);

        RefreshSelectedTags();
        _newTagText = "";
        _status = "Tag added.";
    }

    private void Save()
    {
        var uid = DataContext.ActiveUser.UserId;

        // Build moods list: main mood + up to 2 extras (no duplicates)
        var moods = new List<Mood> { _mainMood };
        foreach (var m in _extraMoods)
        {
            if (!moods.Contains(m))
                moods.Add(m);
        }

        _draft.Moods = moods;

        _draft.Tags = _availableTags
            .Where(t => _selectedTagIds.Contains(t.TagId))
            .ToList();

        var today = DateOnly.FromDateTime(DateTime.Now);
        _todayEntry = EntryService.UpsertForDay(uid, today, _draft);

        _hasTodayEntry = true;

        _status = "Saved successfully.";
        LoadToday();
    }

    private Mood GetDefaultPrimaryMood()
    {
        var neutral = _moodGroups
            .FirstOrDefault(g => g.Category == MoodCategory.Neutral);

        if (neutral is not null && neutral.Moods.Count > 0)
            return neutral.Moods[0];

        var first = _moodGroups.FirstOrDefault();
        return first is not null && first.Moods.Count > 0 ? first.Moods[0] : Mood.Happy;
    }

    private void DeleteToday()
    {
        var uid = DataContext.ActiveUser.UserId;

         var today = DateOnly.FromDateTime(DateTime.Now);
        var ok = EntryService.DeleteForDay(uid, today);

        _status = ok ? "Deleted today’s entry." : "No entry to delete.";
        LoadToday();
    }
}
