@page "/today"
@using JournalApp.Models.Sqlite
@inject JournalApp.Services.EntryService EntryService
@inject JournalApp.Services.MoodService MoodService
@inject JournalApp.Services.TagService TagService
@inject NavigationManager Nav
@inject IJSRuntime JS

<MudContainer MaxWidth="MaxWidth.Medium" Class="page-shell">
    <MudStack Spacing="1" Class="mb-3">
        <MudText Typo="Typo.h4">Journal Entry</MudText>
        <MudText Class="muted-text">
            One entry per day - @DisplayDate.ToString("dddd, MMM dd")
        </MudText>
    </MudStack>

    @if (!string.IsNullOrWhiteSpace(_status))
    {
        <MudAlert Severity="Severity.Info" Class="mb-3">@_status</MudAlert>
    }

    <MudDatePicker Date="_selectedDate"
                   DateChanged="OnDateChanged"
                   Label="Entry date"
                   Variant="Variant.Outlined"
                   Class="mb-4" />

    <MudGrid Class="mb-4">
        <!-- xs stacks, md splits editor and preview -->
        <MudItem xs="12">
            <MudPaper Class="surface-card">
                <MudTextField T="string"
                              Label="Title"
                              Placeholder="Give your entry a title..."
                              @bind-Value="_title"
                              Variant="Variant.Outlined"
                              Class="mb-3" />

                <MudText Typo="Typo.subtitle2" Class="muted-text mb-1">Content</MudText>
                <div id="journal-toolbar" class="mb-2">
                    <span class="ql-formats">
                        <button class="ql-bold"></button>
                        <button class="ql-italic"></button>
                    </span>
                    <span class="ql-formats">
                        <select class="ql-header">
                            <option value="1"></option>
                            <option value="2"></option>
                            <option selected></option>
                        </select>
                    </span>
                    <span class="ql-formats">
                        <button class="ql-list" value="ordered"></button>
                        <button class="ql-list" value="bullet"></button>
                    </span>
                    <span class="ql-formats">
                        <button class="ql-link"></button>
                    </span>
                </div>
                <div id="journal" class="mb-2"></div>
                <MudText Typo="Typo.caption" Class="muted-text">Words: @CountWords(_content)</MudText>

                @if (_todayEntry is not null)
                {
                    <MudDivider Class="my-3" />
                    <MudText Typo="Typo.body2" Class="muted-text">
                        Created: @_todayEntry.CreatedAt:g
                    </MudText>
                    <MudText Typo="Typo.body2" Class="muted-text">
                        Last updated: @_todayEntry.UpdatedAt:g
                    </MudText>
                }
            </MudPaper>
        </MudItem>
    </MudGrid>

    <div  class="card p-3 mb-3 rounded-card">
        <h5 class="mb-3">Mood</h5>

        <div class="mb-3">
            <label class="form-label" for="primary-mood">Primary mood (required)</label>
            <select class="form-select" @bind="_primaryMoodId" id="primary-mood" name="primary-mood" aria-label="Primary mood">
                <option value="0">Select a mood</option>
                @foreach (var group in _moodGroups)
                {
                    <optgroup label="@group.Category">
                        @foreach (var m in group.Moods)
                        {
                            <option value="@m.Id">@m.Name</option>
                        }
                    </optgroup>
                }
            </select>
        </div>

        <div>
            <label class="form-label">Secondary moods (optional, up to 2)</label>
            @foreach (var group in _moodGroups)
            {
                <div class="mb-2">
                    <div class="text-muted small mb-1">@group.Category</div>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var m in group.Moods)
                        {
                            var selected = _secondaryMoodIds.Contains(m.Id);
                            var disable = !selected && _secondaryMoodIds.Count >= 2;

                            <button type="button"
                                    class="btn btn-sm @(selected ? "btn-dark" : "btn-outline-dark")"
                                    disabled="@disable"
                                    @onclick="() => ToggleSecondaryMood(m.Id)">
                                @m.Name
                            </button>
                        }
                    </div>
                </div>
            }

            <div class="form-text">
                Selected: @_secondaryMoodIds.Count / 2
            </div>
        </div>
    </div>

    <div class="card p-3 rounded-card mb-3">
        <h5 class="mb-3">Tags</h5>

        @if (_availableTags.Count == 0)
        {
            <div class="text-muted">No tags available.</div>
        }
        else
        {
            <div class="d-flex flex-wrap gap-2 mb-3">
                @foreach (var t in _availableTags)
                {
                    var selected = _selectedTagIds.Contains(t.Id);

                    <button type="button"
                            class="btn btn-sm @(selected ? "btn-dark" : "btn-outline-dark")"
                            @onclick="() => ToggleTag(t.Id)">
                        @t.Name
                    </button>
                }
            </div>
        }

        <div class="input-group">
            <input class="form-control"
                   placeholder="Add custom tag..."
                   @bind="_newTagText" 
                   id="custom-tag"
                   name="custom-tag"
                   aria-label="Add custom tag"/>
            <button class="btn btn-outline-primary"
                    type="button"
                    @onclick="AddCustomTag">
                Add
            </button>
        </div>

        @if (_selectedTags.Count > 0)
        {
            <div class="mt-3">
                <div class="text-muted" style="font-size:0.9rem;">Selected:</div>
                <div class="d-flex flex-wrap gap-2 mt-1">
                    @foreach (var t in _selectedTags)
                    {
                        <span class="badge bg-secondary">@t.Name</span>
                    }
                </div>
            </div>
        }
    </div>

    <MudPaper Class="surface-card pa-4 mb-3">
        <MudText Typo="Typo.h5" Class="mb-3">Journal Preview</MudText>
        
        <MudStack Spacing="1" Class="mb-4">
            <MudText Typo="Typo.h6">@(_title ?? "Untitled")</MudText>
            <MudText Typo="Typo.caption" Class="muted-text">@DisplayDate.ToString("MMMM dd, yyyy")</MudText>
        </MudStack>

        <MudDivider Class="my-3" />
        
        <div class="ql-editor preview-content">
            @((MarkupString)(_content ?? ""))
        </div>

        @if (_selectedTags.Count > 0)
        {
            <div class="mt-4 d-flex flex-wrap gap-2">
                @foreach (var t in _selectedTags)
                {
                    <span class="badge bg-light text-dark">#@t.Name</span>
                }
            </div>
        }
    </MudPaper>

  <div class="button-group">
    <button class="btn btn-outline"
            @onclick="DeleteToday"
            disabled="@(!_hasTodayEntry)">
        Delete
    </button>

    <button class="btn btn-primary"
            @onclick="Save">
        Save
    </button>
</div>


</MudContainer>

@implements IDisposable

@code {
    private DotNetObjectReference<TodayJournal>? _objRef;
    [SupplyParameterFromQuery]
    public DateTime? Date { get; set; }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            _objRef = DotNetObjectReference.Create(this);
            JS.InvokeVoidAsync("initQuill", "journal", _objRef);
            _editorReady = true;

            if (_pendingContent is not null)
            {
                JS.InvokeVoidAsync("setQuillHtml", _pendingContent);
                _pendingContent = null;
            }
        }
    }

    [JSInvokable]
    public void OnContentChanged(string html)
    {
        _content = html;
        StateHasChanged();
    }

    public void Dispose()
    {
        _objRef?.Dispose();
    }

    private JournalEntry? _todayEntry;
    private bool _hasTodayEntry;
    private string _title = "";
    private string _content = "";
    private string _status = "";
    private bool _editorReady;
    private string? _pendingContent;
    private DateTime? _loadedDate;
    private DateTime _selectedDate = DateTime.Today;

    private List<MoodGroup> _moodGroups = new();
    private int _primaryMoodId;

    private List<Tag> _availableTags = new();

    private readonly HashSet<int> _secondaryMoodIds = new();
    private readonly HashSet<int> _selectedTagIds = new();
    private readonly List<Tag> _selectedTags = new();

    private string _newTagText = "";

    protected override async Task OnInitializedAsync()
    {
        var moods = await MoodService.GetAllAsync();
        _moodGroups = moods
            .GroupBy(m => m.Category)
            .Select(g => new MoodGroup(g.Key, g.OrderBy(m => m.Name).ToList()))
            .OrderBy(g => g.Category)
            .ToList();

        _availableTags = await TagService.GetAllAsync();

        _loadedDate = DisplayDate.Date;
        await LoadTodayAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        var target = DisplayDate.Date;
        if (_loadedDate != target)
        {
            _loadedDate = target;
            _selectedDate = target;
            await LoadTodayAsync();
        }
    }

    private async Task LoadTodayAsync()
    {
        var targetDate = Date?.Date ?? DateTime.Today;
        _todayEntry = await EntryService.GetByDateAsync(targetDate);

        _hasTodayEntry = _todayEntry is not null;

        _secondaryMoodIds.Clear();
        _selectedTagIds.Clear();
        _selectedTags.Clear();

        if (_todayEntry is null)
        {
            _title = "";
            _content = "";
            _primaryMoodId = 0;
            SetEditorContent(_content);

            _status = $"No entry yet for {DisplayDate:dddd, MMM dd}. Write something and save.";
            return;
        }

        _title = _todayEntry.Title ?? "";
        _content = _todayEntry.Content ?? "";
        _primaryMoodId = _todayEntry.PrimaryMoodId;
        SetEditorContent(_content);

        if (_todayEntry.SecondaryMood1Id.HasValue)
            _secondaryMoodIds.Add(_todayEntry.SecondaryMood1Id.Value);
        if (_todayEntry.SecondaryMood2Id.HasValue)
            _secondaryMoodIds.Add(_todayEntry.SecondaryMood2Id.Value);

        var tagsForEntry = await TagService.GetTagsForEntryAsync(_todayEntry.Id);
        foreach (var t in tagsForEntry)
            _selectedTagIds.Add(t.Id);

        RefreshSelectedTags();
        _status = $"Loaded entry for {DisplayDate:dddd, MMM dd}.";
    }

    private void ToggleSecondaryMood(int moodId)
    {
        if (moodId == _primaryMoodId) return;

        if (_secondaryMoodIds.Contains(moodId))
        {
            _secondaryMoodIds.Remove(moodId);
            return;
        }

        if (_secondaryMoodIds.Count >= 2) return;
        _secondaryMoodIds.Add(moodId);
    }

    private void ToggleTag(int tagId)
    {
        if (_selectedTagIds.Contains(tagId))
            _selectedTagIds.Remove(tagId);
        else
            _selectedTagIds.Add(tagId);

        RefreshSelectedTags();
    }

    private void RefreshSelectedTags()
    {
        _selectedTags.Clear();
        _selectedTags.AddRange(_availableTags.Where(t => _selectedTagIds.Contains(t.Id)));
    }


    private async Task AddCustomTag()
    {
        var name = (_newTagText ?? "").Trim();

        if (string.IsNullOrWhiteSpace(name))
        {
            _status = "Tag name cannot be empty.";
            return;
        }

        await TagService.AddCustomAsync(name);
        _availableTags = await TagService.GetAllAsync();

        var added = _availableTags
            .FirstOrDefault(t => t.Name.Equals(name, StringComparison.OrdinalIgnoreCase));

        if (added is not null)
            _selectedTagIds.Add(added.Id);

        RefreshSelectedTags();
        _newTagText = "";
        _status = "Tag added.";
    }

    private async Task Save()
    {
        try
        {
            if (_primaryMoodId <= 0)
            {
                _status = "Primary mood is required.";
                return;
            }

            _content = await JS.InvokeAsync<string>("getQuillHtml");
            if (string.IsNullOrWhiteSpace(_title) && string.IsNullOrWhiteSpace(_content))
            {
                _status = "Add a title or some content before saving.";
                return;
            }

            var action = _todayEntry is null ? "save" : "update";
            var confirm = await JS.InvokeAsync<bool>(
                "confirm",
                $"Do you want to {action} the entry for {DisplayDate:dddd, MMM dd}?");
            if (!confirm) return;

            var secondary = _secondaryMoodIds.Take(2).ToList();

            var entry = _todayEntry ?? new JournalEntry();
            entry.EntryDate = Date?.Date ?? DateTime.Today;
            entry.Title = _title?.Trim();
            entry.Content = _content ?? "";
            entry.PrimaryMoodId = _primaryMoodId;
            entry.SecondaryMood1Id = secondary.Count > 0 ? secondary[0] : null;
            entry.SecondaryMood2Id = secondary.Count > 1 ? secondary[1] : null;
            entry.Category = GetCategoryForMoodId(_primaryMoodId);

            _todayEntry = await EntryService.UpsertAsync(entry);
            await TagService.SetTagsForEntryAsync(_todayEntry.Id, _selectedTagIds.ToList());

            _hasTodayEntry = true;

            _status = "Saved successfully.";
            await LoadTodayAsync();
        }
        catch (Exception ex)
        {
            _status = $"Error saving entry: {ex.Message}";
            Console.WriteLine($"[Save Error] {ex}");
        }
    }

    private async Task DeleteToday()
    {
        if (_todayEntry is null) return;

        var confirm = await JS.InvokeAsync<bool>(
            "confirm",
            $"Delete entry for {DisplayDate:dddd, MMM dd}?");
        if (!confirm) return;

        var targetDate = Date?.Date ?? DateTime.Today;
        var ok = await EntryService.DeleteByDateAsync(targetDate);

        _status = ok
            ? $"Deleted entry for {DisplayDate:dddd, MMM dd}."
            : "No entry to delete.";
        await LoadTodayAsync();
    }

    private static int CountWords(string? text)
    {
        if (string.IsNullOrWhiteSpace(text)) return 0;
        return text.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length;
    }

    private sealed record MoodGroup(string Category, List<Mood> Moods);

    private DateTime DisplayDate => Date?.Date ?? DateTime.Today;

    private void SetEditorContent(string html)
    {
        if (_editorReady)
            JS.InvokeVoidAsync("setQuillHtml", html ?? "");
        else
            _pendingContent = html ?? "";
    }

    private void OnDateChanged(DateTime? value)
    {
        var target = (value ?? DateTime.Today).Date;
        _selectedDate = target;
        Nav.NavigateTo($"/today?date={target:yyyy-MM-dd}");
    }

    private string GetCategoryForMoodId(int moodId)
    {
        foreach (var group in _moodGroups)
        {
            if (group.Moods.Any(m => m.Id == moodId))
                return group.Category;
        }

        return "";
    }
}

